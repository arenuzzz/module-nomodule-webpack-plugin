{
  "name": "module-nomodule-webpack-plugin",
  "version": "0.1.7",
  "description": "Webpack plugin to optimize bundles.",
  "main": "dist/index.js",
  "repository": "arenuzzz/module-nomodule-webpack-plugin",
  "scripts": {
    "prepare": "npm run build",
    "build": "microbundle --target node --format cjs --no-compress src/*.js",
    "prepack": "npm run build",
    "dev": "microbundle watch --target node --format cjs --no-sourcemap --strict  --no-compress src/*.js ",
    "test": "jest --verbose",
    "release": "npm t && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "indent": [
        2,
        2
      ],
      "semi": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/fixtures/"
    ]
  },
  "files": [
    "src",
    "dist",
    "lib"
  ],
  "keywords": [
    "webpack",
    "plugin",
    "minify",
    "optimize"
  ],
  "author": "arenuzzz",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "clean-webpack-plugin": "^1.0.0",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.1.0",
    "jest": "^29.1.2",
    "memory-fs": "^0.4.1",
    "microbundle": "^0.15.1",
    "preact": "^10.5.7",
    "sucrase": "^3.28.0",
    "ts-loader": "^9.4.1",
    "webpack": "^5.65.0",
    "webpack-4": "./test/webpacks/4"
  },
  "dependencies": {
    "@babel/core": "^7.19.3",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "core-js": "^3.25.5",
    "gzip-size": "^5.1.1",
    "jest-worker": "^25.5.0",
    "magic-string": "^0.25.7",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^1.32.1",
    "terser": "^5.10.0",
    "webpack-sources": "^3.2.2"
  },
  "peerDependencies": {
    "@babel/preset-env": "^7.19.3",
    "html-webpack-plugin": ">= 5.0",
    "webpack": ">= 5",
    "@craco/craco": ">= 6.4.5",
    "babel-preset-react-app": ">= 9.0.0"
  }
}
